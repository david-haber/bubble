<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<!-- Default Main Template -->
	<definition name=".mainTemplate" template="/WEB-INF/templates/main.jsp">
		<put-attribute name="title" value="Simple Tiles 2 Example"
			type="string" />
		<put-attribute name="header" value="/WEB-INF/templates/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/templates/footer.jsp" />
		<put-attribute name="menu" value="/WEB-INF/templates/menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/templates/blank.jsp" />
		<put-attribute name="custom-head-content" value="" />
	</definition>

	<definition name="bubbleTemplate" template="/WEB-INF/common/main.jsp">
		<put-attribute name="title" value="Welcome to Bubble"
			type="string" />
		<put-attribute name="header" value="/WEB-INF/common/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/common/footer.jsp" />
		<put-attribute name="body" value="/WEB-INF/common/blankmain.jsp" />
		<put-attribute name="custom-head-content" value="" />

	</definition>

	<definition name="welcome" extends="bubbleTemplate">
		<put-attribute name="body" value="/WEB-INF/views/welcome.jsp" />
	</definition>
	
	<definition name="signup" extends="bubbleTemplate">
		<put-attribute name="body" value="/WEB-INF/views/signup.jsp" />
	</definition>

	<definition name="topics" extends="bubbleTemplate">
		<put-attribute name="body" value="/WEB-INF/views/topics.jsp" />
	</definition>
	
	<definition name="topic" extends="bubbleTemplate">
		<put-attribute name="body" value="/WEB-INF/views/newtopic.jsp" />
		<put-attribute name="custom-head-content" value="/WEB-INF/views/topic-custom-head-content.jsp" />
	</definition>
	
	<definition name="test" extends="bubbleTemplate">
	</definition>

</tiles-definitions>